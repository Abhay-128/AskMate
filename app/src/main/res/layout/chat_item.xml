<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/left_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_item_left_background"
        android:padding="4dp"
        android:layout_marginTop = "10dp"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="5dp"


        >

        <TextView
            android:id="@+id/left_chat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
        />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/right_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_item_right_background"

        android:padding="4dp"
        android:layout_marginTop = "10dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        >
        <TextView
            android:id="@+id/right_chat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            />

    </LinearLayout>

</RelativeLayout>